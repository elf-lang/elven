r = 3.9
k = 0.3
h = r - k
a = sqrt(r * r - h * h)
InitWindow("Find The Length Of The Magenta Line", 128, 128, 4)
while PollWindow() ? {
	SetColor(255,255,255,255)
	DrawCircle(64,64,r*10,16)
	SetColor(0,255,0,255)
	DrawLine(64,64, 64,64+r*10)
	SetColor(255,0,0,255)
	DrawLine(64,64, 64+r*10,64)
	// SetColor(255,0,0,255)
	// DrawLine(0,64+(r-k)*10, 128,64+(r-k)*10)
	SetColor(255,0,255,255)
	DrawLine(64,64+(r-k)*10, 64+(a)*10,64+(r-k)*10)
}