// script that packs images into a single
// image
load_image_folder ::= fun(folder,images) ? {
	images ?= {}
	subfiles := elf.list_folder(folder)
	for file = subfiles[...] ? {
		if file.type == "file" ? {
			images:add(file.path)
		} else if file.type == "folder" ? {
			load_image_folder(file.path,images)
		}
	}
	--> images
}

